<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"  >

        <LinearLayout
            android:id="@+id/login_button_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/setup_button_container"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/login_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/login_button_text" />
            
            <Button
                android:id="@+id/addtheme_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/laddtheme_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setup_button_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/want_button_container"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="10" >

           
        </LinearLayout>

        <LinearLayout
            android:id="@+id/want_button_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="20dp" >

           
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>