<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="@dimen/customer_fx_pager_paddingbuttom"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="4dp" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_fx_menu_item_height"
            android:background="@drawable/fx_preset_button"
            android:text="Effect FX"
            android:textColor="#FFF"
            android:textSize="@dimen/customer_fx_menu_button_fontsize"
            android:layout_marginBottom="8dp" />
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_fx_menu_item_height"
            android:background="@drawable/fx_preset_button"
            android:textSize="@dimen/customer_fx_menu_button_fontsize"
            android:text="Effect FX"
            android:textColor="#FFF" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="4dp"
        android:paddingLeft="4dp" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_fx_menu_item_height"
            android:background="@drawable/fx_preset_button"
            android:text="Effect FX"
            android:textColor="#FFF"
            android:textSize="@dimen/customer_fx_menu_button_fontsize"
            android:layout_marginBottom="8dp" />
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_fx_menu_item_height"
            android:background="@drawable/fx_preset_button"
            android:text="Effect FX"
            android:textSize="16dip"
            android:textColor="#FFF" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="4dp" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_fx_menu_item_height"
            android:background="@drawable/fx_preset_button"
            android:text="Effect FX"
            android:textColor="#FFF"
            android:textSize="@dimen/customer_fx_menu_button_fontsize"
            android:layout_marginBottom="8dp" />
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_fx_menu_item_height"
            android:background="@drawable/fx_preset_button"
            android:text="Effect FX"
            android:textSize="@dimen/customer_fx_menu_button_fontsize"
            android:textColor="#FFF" />
        
    </LinearLayout>

</LinearLayout>